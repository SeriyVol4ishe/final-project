terraform {
  required_version = ">= 1.0"
  backend "local" {}
  required_providers {
    google = {
      source = "hashicorp/google"
    }
    random = {
      source = "hashicorp/random"
    }
  }
}

provider "google" {
  project     = local.credentials_data.project_id
  region      = var.region
  credentials = file(local.credentials_path)
}

